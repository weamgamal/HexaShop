@using projectmvc.ViewModel

@model ProductSizeColorViewModel

<!-- ***** Product Area End ***** -->
@{
    ViewData["Title"] = "SingleProduct";
    Layout = "_NavAndFooter";
}


<div class="mt-5 overflow-hidden">


    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <!--Here we put the name of product-->
                        <h2>@Model.Product.Name</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
    <!-- ***** Product Area Starts ***** -->
    <section class="section" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <!--here put the image of product-->
                    <div class="left-images">
                        <img src="~/UploadedImages/@Model.Product.Image" alt="..." />
                        
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="right-content">
                        <!--Here we put the name of product-->
                        <h4>@Model.Product.Name</h4>
                        <span class="price">"@Model.Product.Price LE"</span>
                        <!--foreach in review to put the stars-->
                        <ul class="stars d-flex">
                            @for (int i = 0; i < Model.Product.Rating; i++)
                            {
                                <li><i class="fa fa-star"></i></li>
                            }

                        </ul>
                        <span>
                            @Model.Product.Description
                        </span>

                        <hr>

                        <div class="sizes mt-2">
                            <h6 class="text-uppercase">Size</h6>

                            @foreach (var sz in ViewBag.Sizes)
                            {
                                <label class="radio">
                                    <input type="radio" name="size" value="@sz.size" checked>
                                    <span>@sz.size</span>
                                </label>
                            }

                        </div>

                        @*forLoop in ProductSizeColor*@
                        <div class="Colors mt-2">
                            <h6 class="text-uppercase">Colors</h6>
                            @foreach (var c in ViewBag.Colors)
                            {
                                <button class="@c.Name"></button>
                            }
                        </div>
                        <hr>
                        <div class="total mt-2">
                            <h4>"Total: @Model.Product.Price LE"</h4>
                            <input type="button" class="btn btn-info mt-2" onclick="CountNotify()" value="Add To Cart">
                        </div>
                        <div class="alert alert-success alert-dismissible" id="AlertMsg" style="visibility:hidden">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            This product Added Successfully.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>

    var count = 0;
    function CountNotify() {
        count++;
        //ViewBag.Notificationcount++;
        //ViewBag.Notification = count;
        //console.log(ViewBag.Notification);
        //let CountNotify = document.getElementById("CounterNotify").innerHTML;
        document.getElementById("AlertMsg").style.visibility = 'visible';
        document.getElementById("AlertMsg").style.display = 'block'
        console.log(count);
        CountNotify = count;
    }

</script>

